{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Jouer une partie",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build all",
            "program": "${workspaceFolder}/Course/bin/Debug/net8.0/Course.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "externalTerminal"
        },
        {
            "name": "Jouer une partie (sans compiler)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/Course/bin/Debug/net8.0/Course.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "externalTerminal"
        },
        {
            "name": "Lancer les tests (avec compilation)",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "test"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Lancer les tests (sans recompiler)",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "test",
                "--no-build",
                "--no-restore"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Compilation rapide",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "build",
                "--no-restore"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        }
    ]
}